<Window x:Class="Med_LAb_N20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Med_LAb_N20"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Width="400" Height="284" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <TextBox Margin="20" x:Name="logtb"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <TextBox Text="{Binding ElementName=passtb,Path=Password}" Margin="20 0 20 0" Width="300"></TextBox>
                    <PasswordBox Password="" Margin="20 0 20 0" Width="300" x:Name="passtb"/>
                </Grid>

                <Button Width="40" Click="Button_Click_1"></Button>
            </StackPanel>

            <Button Margin="40" Height="40" Width="90" Click="Button_Click" Content="Ввойти"></Button>
        </StackPanel>
    </Grid>
</Window>
